<h1><%= @list.name %></h1>

<h2>Films dans cette liste</h2>
<% @list.bookmarks.each do |bookmark| %>
  <div>
    <strong><%= bookmark.movie.title %></strong>
    <p><%= bookmark.comment %></p>
    <%= link_to "Supprimer", bookmark_path(bookmark), data: { turbo_method: :delete } %>
  </div>
<% end %>

<h2>Ajouter un film</h2>
<%= simple_form_for [@list, @bookmark] do |f| %>
  <%= f.input :movie_id, collection: Movie.all, label_method: :title, value_method: :id %>
  <%= f.input :comment %>
  <%= f.submit "Ajouter", class: "btn btn-primary" %>
<% end %>

<%= link_to "Retour aux listes", lists_path %>
